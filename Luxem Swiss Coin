  <script>
    async function addToken() {
      try {
        const wasAdded = await window.ethereum.request({
          method: 'wallet_watchAsset',
          params: {
            type: 'ERC20',
            options: {
              address: '0xD48bF95b1d7B5035980C065A78c7D83aaF476367',
              symbol: 'LSC',
              decimals: 18,
              image: 'https://cdn.shopify.com/s/files/1/0906/7544/6137/files/DarkPurpleAndGoldModernGoldLoanLogo_2.png?v=1754149410',
            },
          },
        });

        if (wasAdded) {
          alert('‚úÖ LSC was added to your MetaMask wallet!');
        }
      } catch (error) {
        console.error(error);
        alert('‚ö†Ô∏è Please make sure MetaMask is installed and unlocked.');
      }
    }
  </script>

